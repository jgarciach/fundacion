<%- model_class = Signee -%>
<div class="container-fluid outer-box no-padding">
  <div class="container">
    <div class="container-fluid">
      <div class="row-fluid">
        <div id="outer-box-title">
          <div class="span12">
            <h3 class="text-light">
              Unete al movimiento que formara a los futuros emprendedores de Panama.  
            </h3>
            <hr>
          </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="inner-box">
          <%= bootstrap_flash%>
          <div class="span6">
            <div class="row-fluid js-video">
              <iframe width="420" height="315" src="http://www.youtube.com/embed/T6MhAwQ64c0" frameborder="0" allowfullscreen></iframe>
            </div>
          </div>
          <div class="span6 email-form">
            <span class="text-light span12 form-directions">Registrate con tu email recibir informaicon sobre la primera ronda de eventos: <b>"Encuentra tu Proyecto"</b></span>
            <%= render :partial => 'form_for_new' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container powered-by">
  <div class="container-fluid">
    <div class="row-fluid">
      <span class="span12 undir">Propulsado por:</span>
      <div class="row-fluid" id="sponsors">
        <div class="span4" id="ubiqua"><%= image_tag("ubiqua.png") %></div>
        <div class="span4" id="usma"><%= image_tag("usma.png") %></div>
        <div class="span4" id="taller"><%= image_tag("taller.jpg") %></div>
      </div>
    </div>
  </div>
</div>
